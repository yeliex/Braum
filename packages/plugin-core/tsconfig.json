{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "experimentalDecorators": true,
    "outDir": "lib",
    "rootDir": "src",
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ES2017",
    "locale": "zh-CN",
    "lib": [
      "es2015",
      "es2016",
      "es2017"
    ],
    "newLine": "LF", // 防止windows编译出来crlf的换行符
    "pretty": true
  },
  "exclude": [
    "node_modules",
    "lib",
    "es"
  ]
}
